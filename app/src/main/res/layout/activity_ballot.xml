<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ballot.Ballot">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_view1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="BALLOT"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:gravity="center"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fullNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:text="Full name         : Tau Bokaba"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_below="@+id/fullNames"
            android:layout_marginStart="10dp"
            android:text="Status                : Voted"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_below="@+id/status"
            android:layout_marginStart="10dp"
            android:text="Your code         : 25845"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_below="@+id/code"
            android:layout_marginStart="10dp"
            android:text="Your choice       : EFF"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/issues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_below="@+id/organization"
            android:layout_marginStart="10dp"
            android:text="Issues you want to be solved?"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_below="@+id/issues"
            android:layout_marginStart="10dp"
            android:text="      1 - Water"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_below="@+id/first"
            android:layout_marginStart="10dp"
            android:text="      2 - Unemployment"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_below="@+id/second"
            android:layout_marginStart="10dp"
            android:text="      3 - Potholes"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/third"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:text="Signature :   ______________________"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/signatureText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_below="@+id/signature"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:text="Insert ballot inside the box, thank you for voting"
            android:textSize="16dp"
            android:textStyle="normal"
            />



    </RelativeLayout>

</RelativeLayout>